<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login_bk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/login_bk"
            android:scaleType="centerInside" android:adjustViewBounds="true"
            android:cropToPadding="false" app:srcCompat="@drawable/login_bk" android:scaleY="1.35"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.153"
            android:id="@+id/login_an" style="@style/loginTextBold" app:layout_constraintHorizontal_bias="0.504"/>
    <TextView
            android:text="@string/login_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_fn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" style="@style/loginTextRegular"
            app:layout_constraintVertical_bias="0.328"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/login_u"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.543" app:layout_constraintVertical_bias="0.466"
            style="@style/regularText" android:minHeight="55dp" android:autofillHints="username"
            android:hint="@string/login_u"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_c"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.543" app:layout_constraintVertical_bias="0.576"
            style="@style/regularText" android:minHeight="55dp" android:autofillHints="password"
            android:hint="@string/login_c"/>
    <Button
            android:text="@string/login_acc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_acc_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.726"
            style="@style/loginButton" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="@string/login_reg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_reg_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.878"
            style="@style/loginButton" app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>