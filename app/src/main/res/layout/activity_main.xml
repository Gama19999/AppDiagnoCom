<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_bk"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/login_bk"
            android:scaleType="centerInside" android:adjustViewBounds="true"
            android:cropToPadding="false" app:srcCompat="@drawable/login_bk" android:scaleY="1.35"/>
    <ImageView
            android:layout_width="153dp"
            android:layout_height="244dp"
            android:id="@+id/login_app_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/app_icon"
            android:scaleType="centerInside" android:adjustViewBounds="true"
            android:cropToPadding="false" app:srcCompat="@drawable/diagnocom"
            app:layout_constraintVertical_bias="0.278" app:layout_constraintHorizontal_bias="0.523"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.127"
            android:id="@+id/login_an" style="@style/loginTextBold"/>
    <TextView
            android:text="@string/login_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_fn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" style="@style/loginTextRegular"
            app:layout_constraintVertical_bias="0.533"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_alert"
            android:text="@string/login_alert"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.657"
            style="@style/regularText"/>
    <Button
            android:text="@string/login_acc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_acc_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.796"
            style="@style/loginButton" app:layout_constraintHorizontal_bias="0.498"
            android:onClick="login_acc_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>